import os

DEBUG = os.environ.get('DEBUG', 'True').lower() == 'true'  

LOGGING = {
    'version': 1,
    'disable_existing_loggers': False,
    'filters': {
        'require_debug_true': {
            '()': 'django.utils.log.RequireDebugTrue',
        },
        'require_debug_false': {
            '()': 'django.utils.log.RequireDebugFalse',
        },
    },
    'formatters': {
        'console_debug': {
            'format': '{asctime} {levelname} {message}',
