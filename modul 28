            'format': '{asctime} {levelname} {module} {message}',
            'style': '{',
        },
        'errors_file': {
            'format': '{asctime} {levelname} {message}\nPath: {pathname}\n{exc_info}',
            'style': '{',
        },
        'security_file': {
            'format': '{asctime} {levelname} {module} {message}',
            'style': '{',
