let flats = [
    {
        img: 'foto/first-foto.png',
        city: 'Rostov-on-Don LCD admiral',
        metr: '81 m2',
        time: '3,5 months'
    },

    {
        img: 'foto/second-foto.png',
        city: 'Sochi Thieves',
        metr: '105 m2',
        time: '4 months'
    },

    {
        img: 'foto/three.png',
        city: 'Rostov-on-Don Patriotic',
        metr: '93 m2',
        time: '3 months'
    }
]

let current = 0;

function prev() {
    if (current == 0) {
        current = flats.length - 1
    } else {
        current-- 
    }
    document.getElementById('img').src = flats[current]['img']
    document.getElementById('city').innerHTML = flats[current]['city']
    document.getElementById('metr').innerHTML = flats[current]['metr']
    document.getElementById('time').innerHTML = flats[current]['time']
}

function next() {
    if (current == flats.length - 1) {
        current = 0
    } else {
        current++ 
    }
    document.getElementById('img').src = flats[current]['img']
     document.getElementById('city').innerHTML = flats[current]['city']
    document.getElementById('metr').innerHTML = flats[current]['metr']
    document.getElementById('time').innerHTML = flats[current]['time']
}

function dot(id) {
    current = id
    document.getElementById('img').src = flats[current]['img']
    document.getElementById('city').innerHTML = flats[current]['city']
    document.getElementById('metr').innerHTML = flats[current]['metr']
    document.getElementById('time').innerHTML = flats[current]['time']
}
