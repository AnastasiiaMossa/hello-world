<body>

<h2>Эхо-чат</h2>
<div id="chat"></div>

<div class="controls">
  <input type="text" id="messageInput" placeholder="Введите сообщение..." />
  <button id="sendBtn">Отправить</button>
  <button id="locationBtn">Геолокация</button>
</div>

<script src="script.js"></script>

