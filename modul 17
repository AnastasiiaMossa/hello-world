from django.contrib.auth.models import User
user1 = User.objects.create_user('user1', password='testpass123')
user2 = User.objects.create_user('user2', password='testpass123')

from news.models import Author, Category, Post, PostCategory, Comment
author1 = Author.objects.create(user=user1)
author2 = Author.objects.create(user=user2)

category1 = Category.objects.create(name='Спорт')
category2 = Category.objects.create(name='Политика')
category3 = Category.objects.create(name='Образование')
category4 = Category.objects.create(name='Технологии')

post1 = Post.objects.create(
    author=author1,
    post_type=Post.ARTICLE,
    title='Первая статья',
    text='Это текст первой статьи. Он должен быть достаточно длинным, чтобы можно было увидеть работу метода preview. Здесь много интересного контента о различных темах, которые могут заинтересовать читателей.'
)

post2 = Post.objects.create(
    author=author2,
    post_type=Post.ARTICLE,
    title='Вторая статья',
    text='Это текст второй статьи. Она также содержит много полезной информации и интересных фактов, которые будут полезны для наших читателей.'
)

post3 = Post.objects.create(
    author=author1,
    post_type=Post.NEWS,
    title='Важная новость',
    text='Это текст новости. Здесь описываются последние события в мире. Новость содержит актуальную информацию, которая может быть интересна широкой аудитории.'
)

PostCategory.objects.create(post=post1, category=category1)
PostCategory.objects.create(post=post1, category=category2)  # У первой статьи 2 категории
PostCategory.objects.create(post=post2, category=category3)
PostCategory.objects.create(post=post3, category=category4)
PostCategory.objects.create(post=post3, category=category1)  # У новости тоже 2 категории

comment1 = Comment.objects.create(post=post1, user=user1, text='Отличная статья!')
comment2 = Comment.objects.create(post=post1, user=user2, text='Интересная точка зрения.')
comment3 = Comment.objects.create(post=post2, user=user1, text='Спасибо за информацию.')
comment4 = Comment.objects.create(post=post3, user=user2, text='Важная новость!')
comment5 = Comment.objects.create(post=post3, user=user1, text='Ждем продолжения.')

post1.like()
post1.like()
post1.like()  # рейтинг = 3
post2.like()
post2.dislike()  # рейтинг = 0
post3.like()
post3.like()
post3.like()
post3.like()  # рейтинг = 4

comment1.like()
comment1.like()
comment1.like()  # рейтинг = 3
comment2.like()
comment2.dislike()  # рейтинг = 0
comment3.like()  # рейтинг = 1
comment4.like()
comment4.like()  # рейтинг = 2
comment5.dislike()  # рейтинг = -1

author1.update_rating()
author2.update_rating()

best_author = Author.objects.order_by('-rating').first()
print(f"Лучший автор: {best_author.user.username}, рейтинг: {best_author.rating}")

best_post = Post.objects.order_by('-rating').first()
print(f"Лучшая статья:")
print(f"Дата: {best_post.created_at}")
print(f"Автор: {best_post.author.user.username}")
print(f"Рейтинг: {best_post.rating}")
print(f"Заголовок: {best_post.title}")
print(f"Превью: {best_post.preview()}")

print(f"\nКомментарии к лучшей статье:")
comments = Comment.objects.filter(post=best_post)
for comment in comments:
    print(f"Дата: {comment.created_at}, Пользователь: {comment.user.username}, Рейтинг: {comment.rating}, Текст: {comment.text}")
